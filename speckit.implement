```html
@model IEnumerable<NotesManager.Models.Note>

@{
    ViewData["Title"] = "My Notes";
    var sortBy = ViewData["SortBy"]?.ToString() ?? "modified";
    var ascending = (bool)(ViewData["Ascending"] ?? false);

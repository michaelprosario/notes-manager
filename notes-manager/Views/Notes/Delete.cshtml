@model NotesManager.Models.Note

@{
    ViewData["Title"] = "Delete Note";
}

<div class="page-header">
    <h1>Delete Note</h1>
</div>

<div class="confirmation-container">
    <div class="alert alert-warning">
        <h3>⚠️ Are you sure you want to delete this note?</h3>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="note-preview">
        <h4>@Model.NoteName</h4>
        <p class="note-meta">Created: @Model.CreatedDate.ToString("MMM dd, yyyy")</p>
        @if (!string.IsNullOrWhiteSpace(Model.Content))
        {
            <div class="content-preview">
                @Model.Content.Substring(0, Math.Min(200, Model.Content.Length))@(Model.Content.Length > 200 ? "..." : "")
            </div>
        }
    </div>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="NoteId" />
        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete Note</button>
        </div>
    </form>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notes Manager</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Notes")">üìù Notes Manager</a>
                <div class="navbar-links">
                    <a href="@Url.Action("Index", "Notes")">All Notes</a>
                    <a href="@Url.Action("Create", "Notes")" class="btn-primary">+ New Note</a>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        
        @RenderBody()
    </main>
    
    <footer>
        <div class="container">
            <p>&copy; 2026 Notes Manager. All rights reserved.</p>
        </div>
    </footer>
    
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
